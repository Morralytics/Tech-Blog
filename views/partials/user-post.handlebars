{{#each userPosts as |post|}}
  <div class="card custom-card" onclick="location.href='/dashboard/edit/{{post.id}}'">
    <div class="card-header custom-admin-card">
      <span>
        {{post.title}}
      </span>
      <span class="sub-doc">
        {{post.createdAt}}
      </span>
    </div>
    <div class="card-body custom-card-txt">
      <blockquote class="blockquote mb-0">
        <p>{{post.content}}</p>
      </blockquote>
    </div>
  </div>
{{/each}}