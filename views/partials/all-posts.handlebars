{{#each posts as |posts|}}
  <section class="card">
    <a href="/post/{{posts.id}}" class="post-link">
      <div class="post-card">
        <div class="user-post-header all-posts-header">
          <p class="text-container-content" id="all-post-title">
            {{posts.title}}
          </p>
          <p class="text-container-content" id="post-date">
            Posted by:
            {{posts.user.username}}
            on
            {{posts.createdAt}}
          </p>
        </div>
        <div class="user-post-content all-posts-content">
          <p class="text-container-content" id="all-post-content">
            {{posts.content}}
          </p>
        </div>
      </div>
    </a>
  </section>
{{/each}}